generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FileTransfer {
  id            String   @id @default(cuid())
  uniqueKey     Int      @unique
  fileName      String
  fileSize      BigInt
  mimeType      String
  s3Key         String
  encryptionIV  String
  authTag       String
  createdAt     DateTime @default(now())
  expiresAt     DateTime
  downloadCount Int      @default(0)
  maxDownloads  Int      @default(1)
  password      String?
}
